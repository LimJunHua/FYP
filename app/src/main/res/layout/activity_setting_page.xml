<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingPage">


    <LinearLayout
        android:id="@+id/linearLayout11"
        android:layout_width="417dp"
        android:layout_height="79dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="91dp"
            android:layout_height="78dp"
            app:srcCompat="@drawable/white_logo"
            tools:srcCompat="@drawable/white_logo" />

        <TextView
            android:id="@+id/tvBrand"
            android:layout_width="223dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10sp"
            android:paddingTop="30sp"
            android:shadowColor="#AA8A8A"
            android:text="Snowvie"

            android:textColor="@color/textColor"
            android:textColorHint="#E60707"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btnSetting"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:clickable="true"
            app:srcCompat="@drawable/black_setting"
            tools:srcCompat="@drawable/black_setting" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout11"
        tools:layout_editor_absoluteX="-43dp">

        <Button
            android:id="@+id/btnChatNav"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/grey"
            android:text="@string/chat"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnPostNav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/grey"
            android:text="post"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnMusicNav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/grey"
            android:text="music"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="404dp"
        android:layout_height="453dp"
        android:background="@drawable/border"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout12">

        <Button
            android:id="@+id/btnProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:text="User Profile"
            android:backgroundTint="@color/grey"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnUserBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:text="Chat Room Background Setting"
            android:backgroundTint="@color/grey"
            android:textAllCaps="false" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchCompat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:checked="false"
            android:padding="10dp"
            android:text="DayNight Mode"
            android:textSize="20dp"
            android:textStyle="bold"
            app:switchPadding="10dp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/Notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:checked="false"
            android:padding="10dp"
            android:text="Notification"
            android:textSize="20dp"
            android:textStyle="bold"
            app:switchPadding="10dp" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Log out"
            android:backgroundTint="@color/grey"
            android:textAllCaps="false" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>